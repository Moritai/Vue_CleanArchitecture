{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,//InversifyJSに必要(reflect-metadata要インストール)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false, //クラスのプロパティ初期化必須解除
    "types": [
      "webpack-env",
      "reflect-metadata", //InversifyJSに必要
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "vue-loading-overlay": ["vue-loading-overlay.d.ts"]
    },
    "lib": [
      "es6",//InversifyJSに必要
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "typeRoots": ["node_modules/@types", "src/@types"], 
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "rules": {
    "interface-name": [
        true,
        "always-prefix"
    ]
}
  
}
